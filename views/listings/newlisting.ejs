<% layout("/layouts/boilerplate")%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <br /><br />
                    <h3>Create New Listing</h3>

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" type="text" placeholder="Enter title" required
                            class="form-control" />
                        <div class="invalid-feedback">Enter valid Title</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" type="text" class="form-control" required
                            placeholder="Enter description"></textarea>
                        <div class="invalid-feedback">Enter valid Description</div>
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" type="number" class="form-control" required
                            placeholder="Enter price" />
                        <div class="invalid-feedback">Enter valid Price</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="listing[image]" class="form-control" required>
                        <div class="invalid-feedback">Image</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]" type="text" class="form-control" required
                                placeholder="Enter location" />
                            <div class="invalid-feedback">Enter valid Location</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" type="text" class="form-control" required
                                placeholder="Enter country" />
                            <div class="invalid-feedback">Enter valid Country</div>
                        </div>
                    </div>

                    <button class="btn btn-dark add-btn">Add Listing</button>
                    <br /><br />
                </form>
            </div>
        </div>
    </body>